<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tx_item_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/url_item_selector"
        android:clickable="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="url"
        android:textColor="@color/text_col"
        android:textSize="@dimen/ds_text_size_big" />

    <Button
        android:id="@+id/bt_item_del"
        android:layout_width="40dp"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/popwindow_item_selector"
        android:text="删除"
        android:textColor="@color/bt_del"
        android:textSize="@dimen/ds_text_size_big" />

</RelativeLayout>